<% form_for @product, :html => { :multipart => true } do |f| %>
  <table style="width:80%">
  	<tr>
  		<td colspan="2">
  			<%= f.error_messages %>
  		</td>
  	</tr>
	<tr>
		<td><%= f.label :code, (t "product.code") %><br /></td>
		<td> <%= f.text_field :code %></td>
	</tr>
	
	<tr>
		<td><%= f.label :name, (t "product.name")  %><br /></td>
		<td>   <%= f.text_field :name %></td>
	</tr>
        <tr>
		<td><%= f.label  :product_group_id %><br /></td>
		<td><%= f.select :product_group_id, ProductGroup.all(:order => "name").map {|d| [d.name, d.id]}, {:include_blank => true} %></td>
	</tr>
	
	<tr>
		<td><%= f.label  :product_category_id %><br /></td>
		<td><%= f.select :product_category_id, ProductCategory.all(:order => "name").map {|c| [c.name, c.id]}, {:include_blank => true} %></td>
	</tr>
        <tr>
		<td><%= f.label  :uom_id %><br /></td>
		<td><%= f.select :uom_id, Uom.all(:order => "name").map {|u| [u.name, u.id]} %></td>
	</tr>
	
	<tr>
		<td><%= f.label :description, (t "common.description") %><br /></td>
		<td><%= f.text_area :description, :size => "60x4" %></td>
	</tr>
	
	
	<tr>
		<td> <%= f.label :active, (t "product.active") %>?<br /></td>
		<td><%= f.check_box :active %></td>
	</tr>
	
	<tr>
		<td> 	<% if @product.photo? %>
	  <%= image_tag @product.photo.url(:thumb) %>
    <% end %><br /></td>
		<td> <%= f.label :photo, (t "product.image") %><br />
  	 <%= f.file_field :photo %></td>
	</tr>
	
	<tr>
		<td></td>
		<td>
			<%= f.submit(t "links.submit") %>
		</td>
	</tr>
	
  </table>
  

<% end %>
