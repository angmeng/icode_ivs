<% title 'Editing project'  %>
<br />
<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>
<br /><br />
<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
     <%= f.text_area :description, :size => "60x2" %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :project_supervisor_id, "PIC" %><br />
    <%= f.select :project_supervisor_id, ProjectSupervisor.all(:order => "name").map {|u| [u.name, u.id]} %>
  </p>
  <p>
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

