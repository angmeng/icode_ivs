<% title "Material"  %>
<br />
 <% if is_admin? %>
<%= link_to 'Edit', edit_material_path(@material) %> |
<%= link_to 'Copy', copy_material_path(@material) %> |
<% end %>
<%= link_to 'Back', materials_path %>
