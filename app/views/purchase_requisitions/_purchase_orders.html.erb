<div class="mg10 exhibiton ex01">
    <div class="exHead">
        <div class="hTxt">
            <div class="hTxtContent"><h2>Purchase Orders</h2></div>
        </div>
        <div class="hLeft"></div>
        <div class="hRight"></div>
    </div>
    <div class="exBody">
        <div class="content">

          <% form_tag update_po_purchase_requisition_path(@pr) do %>
         <table width="100%">
  <tr>
    <th align="left">PO No</th>
    <th align="left">Supplier</th>
    <th align="left">Action</th>
  </tr>
<% @pr.purchase_orders.each do |po| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= text_field_tag "po[#{po.id.to_s}][po_number]", po.purchase_order_number   %></td>
    <td><%= po.supplier.name   %></td>
    <td><%= link_to "show", po  %></td>
  </tr>
<% end %>
</table>
          &nbsp;&nbsp;&nbsp;&nbsp;<%= submit_tag "Update" %>
          <% end %>
        </div>
    </div>
    <div class="exFoot">
        <div class="fLeft"></div>
        <div class="fRight"></div>
    </div>
</div>

