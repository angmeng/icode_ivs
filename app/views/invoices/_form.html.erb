<% form_for @invoice do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :invoice_date, (t "invoice.invoice_date") %><br />
    <%= f.date_select :invoice_date %>
  </p>
  <p>
    <%= f.label :invoice_number, (t "invoice.invoice_number") %><br />
    <%= f.text_field :invoice_number %>
  </p>

  <p>
    <%= f.label :remark, (t "invoice.remark") %><br />
    <%= f.text_field :remark %>
  </p>
  <p><%= f.submit(t "links.submit") %></p>
<% end %>
