<% title (t "titles.edit") %>
<br />
<%= link_to (t "links.show"), @purchase_order %> |
<%= link_to (t "links.view_all"), purchase_orders_path %>
<br /><br />
<% form_for(@purchase_order) do |f| %>
  <%= f.error_messages %>

<p>
    <%= f.label :purchase_order_number, "PO No" %><br />
    <%= f.text_field :purchase_order_number %>
  </p>
  <p>
    <%= f.label :purchase_order_date, (t "invoice.invoice_date") %><br />
    <%= f.date_select :purchase_order_date %>
  </p>
  <p>
    <%= f.label :delivery_date %><br />
    <%= f.text_field :delivery_date %>
  </p>
    <p>
    <%= f.label :expected_delivery_date %><br />
    <%= f.calendar_date_select :expected_delivery_date %>
  </p>
   <p>
    <%= f.label :deliver_to %><br />
    <%= f.text_field :deliver_to %>
  </p>

    <p><%= f.label :project_id %><br />
        <%= f.select :project_id, options_for_select(@projects, @purchase_order.project_id) %>
      </p>
        <p><%= f.label :currency_id %><br />
        <%= f.select :currency_id, Currency.all.map {|c| [c.name, c.id]} %>
      </p>
       <p>
    <%= f.label :term %><br />
    <%= f.text_field :term %>
  </p>
  <p><%= f.label :purchased_user_id %><br />
        <%= f.select :purchased_user_id, User.all(:order => "signature_name").map {|u| [u.signature_name, u.id]}, :include_blank => true %>
      </p>
      <p><%= f.label :approved_user_id %><br />
        <%= f.select :approved_user_id, User.all(:order => "signature_name").map {|u| [u.signature_name, u.id]}, :include_blank => true %>
      </p>
  <p>
    <%= f.label :remark, (t "common.remark") %><br />
    <%= f.text_area :remark, :size => "60x4", :class => "mceEditor" %>
  </p>
  <p>
    <%= f.submit(t "links.update") %>
  </p>
  
<% end %>

